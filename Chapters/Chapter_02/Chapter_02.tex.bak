		  	\begin{equation}
			\bm \Phi_{OOP}(t, t_0) = \left[ \begin{array}{cccc}
			\cos\omega(t - t_0)  & \frac{\sin\omega(t - t_0)}{\omega} 		\\
			-\omega\sin\omega(t - t_0)	& \cos\omega(t - t_0)
			\end{array}\right]
